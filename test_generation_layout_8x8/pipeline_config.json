{
  "pipeline_config": {
    "description": "Configuration du pipeline de génération et sélection de layouts",
    "generation": {
      "total_layouts_to_generate": 10000,
      "block_size": 5000,
      "processes": 4
    },
    "evaluation": {
      "recipe_group_sample_size": null,
      "layout_sample_size": null,
      "processes": 4
    },
    "selection": {
      "final_layouts_count": 50,
      "criteria": {
        "cooperation_gain": {
          "weight": 0.4,
          "description": "Pourcentage d'amélioration en mode coopératif vs solo"
        },
        "efficiency": {
          "weight": 0.35,
          "description": "Efficacité basée sur le nombre d'étapes duo"
        },
        "exchanges": {
          "weight": 0.25,
          "description": "Potentiel d'échanges entre joueurs"
        }
      },
      "diversity": {
        "ensure_layout_diversity": true,
        "max_layouts_per_recipe_group": 5,
        "min_complexity_range": true
      }
    },
    "output": {
      "final_layouts_dir": "layouts_finaux",
      "format": "layout",
      "include_metadata": true,
      "include_evaluation_report": true
    }
  },
  "recipe_config": {
    "group_size": 6,
    "ensure_no_duplicates": true
  },
  "quality_thresholds": {
    "min_cooperation_gain": 50.0,
    "min_connectivity_score": 0.7,
    "min_distance_efficiency": 0.3
  }
}
